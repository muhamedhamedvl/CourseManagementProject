@model CourseManagement.DAL.Models.Course
@{
    ViewBag.Title = "Create Course";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InstructorId">Instructor</label>
        <select asp-for="InstructorId" asp-items="@(new SelectList(ViewBag.Instructors, "Id", "FirstName"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    @* <button type="submit" asp-action="Index" class="btn btn-success">Save</button> *@
    <input type="submit" asp-action="Index"  value="Save" class="btn btn-primary" />

    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
