@model CourseManagement.DAL.Models.Course

@{
    ViewBag.Title = "Course Details";
}

<h2>@Model.Name</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Category: @Model.Category</h5>
        <h6 class="card-subtitle mb-2 text-muted">
            Instructor: @Model.Instructor?.FirstName @Model.Instructor?.LastName
        </h6>
        <p class="card-text">
            @Model.Description
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a>
</div>
